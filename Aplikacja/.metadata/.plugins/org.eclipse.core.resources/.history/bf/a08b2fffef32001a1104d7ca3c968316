import java.io.BufferedReader;
import java.io.File;
import java.io.FileReader;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.Date;

import DataLayer.Data;
import DataLayer.Components.Rental;

public class tmpRead {

	Calendar first;
	Calendar second;
	
	public static void main(String[] args) {
		new tmpRead();

	}

	public tmpRead() {
		String line;
		try {
			System.out.println("1"+"zaczynamy wypo¿yczenia:");
			File file = new File("tmp.txt");
			BufferedReader reader = new BufferedReader(new FileReader(file));
			System.out.println("2"+"ustawiono reader");
			while ((line = reader.readLine()) != null)
			{
				splitAndBuildData(line);
				System.out.println("3"+first.getTime()+"\n"+second.getTime());
			}
			reader.close();
		} catch (Exception e) {
			System.out.println("Nie Uda³o siê za³adowaæ wszystkich danych");
		}
	}
	
	public void splitAndBuildData(String line) {
		String [] strArr = line.split(";");
		Calendar cal = Calendar.getInstance();
		SimpleDateFormat sdf = new SimpleDateFormat("EEE MMM dd HH:mm:ss z yyyy");

		
		
		try {
			System.out.println("4"+"pobieranie dat: "+strArr[0]+" rozmiar "+strArr[0].length());
			
			cal.setTime(sdf.parse(strArr[0]));
			System.out.println("5"+"odczyt");
			this.first = cal;
			System.out.println("6"+"przypisanie");
			cal.setTime(sdf.parse(strArr[1]));
			this.second = cal;
			System.out.println("7"+"wczytano daty");
		} catch (ParseException e) {
			System.out.println("8"+"Problem podczas odczytu czasu");
		}
		
		System.out.println("9"+"blad");
		
	
	}
	
	public void costam() {
		String [] strArr = line.split(";");
		Calendar cal = Calendar.getInstance();
		SimpleDateFormat sdf = new SimpleDateFormat("EEE MMM dd HH:mm:ss z yyyy");
		
		String text = first.getTime().toString();
		System.out.print("9.5");
		try {
			System.out.print("10");
			Calendar tmp = Calendar.getInstance();
			tmp.setTime(sdf.parse(text));
			System.out.print("11"+tmp.getTime());
		} catch (ParseException e) {
			// TODO Auto-generated catch block
			System.out.println("DFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFF");
		}
	}
}
