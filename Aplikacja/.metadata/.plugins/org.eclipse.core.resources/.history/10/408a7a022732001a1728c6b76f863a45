package PresentationLayer;

import javax.swing.JPanel;
import javax.swing.JButton;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import javax.swing.JScrollPane;
import javax.swing.JTable;
import javax.swing.JMenuBar;
import javax.swing.JMenu;
import javax.swing.JMenuItem;

public class MainPanel extends JPanel {
	private JTable table;

	/**
	 * Create the panel.
	 */
	public MainPanel() {
		String[] colName = new String[] { "Product Name" ,"Price" };
        Object[][] products = new Object[][] { 
                { "Galleta" ,"$80" },
                { "Malta" ,"$40" },
                { "Nestea" ,"$120" },
                { "Tolta" ,"$140" } 
            };
        setLayout(null);

        JTable table = new JTable( products, colName );

		JScrollPane scrollPane = new JScrollPane( table );
		scrollPane.setBounds(10, 48, 430, 176);
		this.add(scrollPane);
		
		JMenuBar menuBar = new JMenuBar();
		menuBar.setBounds(0, 0, 450, 22);
		add(menuBar);
		
		JMenu mnWypoyczenia = new JMenu("Wypo\u017Cyczenia");
		menuBar.add(mnWypoyczenia);
		
		JMenuItem mntmDodaj = new JMenuItem("Dodaj");
		mnWypoyczenia.add(mntmDodaj);
		
		JMenuItem mntmUsun = new JMenuItem("Usun");
		mnWypoyczenia.add(mntmUsun);
		
		JMenuItem mntmEdytuj = new JMenuItem("Edytuj");
		mnWypoyczenia.add(mntmEdytuj);
		
		JMenu mnKasety = new JMenu("Kasety");
		menuBar.add(mnKasety);
		
		JMenuItem mntmDodaj_1 = new JMenuItem("Dodaj");
		mnKasety.add(mntmDodaj_1);
		
		JMenuItem mntmUsun_1 = new JMenuItem("Usun");
		mnKasety.add(mntmUsun_1);
		
		JMenuItem mntmEdytuj_1 = new JMenuItem("Edytuj");
		mnKasety.add(mntmEdytuj_1);
	}
}
