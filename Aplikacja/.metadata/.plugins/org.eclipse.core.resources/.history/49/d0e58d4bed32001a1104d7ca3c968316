import java.io.BufferedReader;
import java.io.File;
import java.io.FileReader;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Calendar;

import DataLayer.Components.Rental;

public class tmpRead {

	Calendar first;
	Calendar second;
	
	public static void main(String[] args) {
		new tmpRead();

	}

	public tmpRead() {
		String line;
		try {
			System.out.println("zaczynamy wypo¿yczenia:");
			File file = new File("tmp.txt");
			BufferedReader reader = new BufferedReader(new FileReader(file));
			System.out.println("ustawiono reader");
			while ((line = reader.readLine()) != null)
			{
				splitAndBuildData(line);
				System.out.println(first.getTime()+"\n"+second.getTime());
			}
			reader.close();
		} catch (Exception e) {
			System.out.println("Nie Uda³o siê za³adowaæ wszystkich danych");
		}
	}
	
	public void splitAndBuildData(String line) {
		String [] strArr = line.split(";");
		Calendar cal = Calendar.getInstance();
		SimpleDateFormat sdf = new SimpleDateFormat("EEE MMM dd HH:mm:ss z yyyy");
		try {
			System.out.println("pobieranie dat");
			cal.setTime(sdf.parse(strArr[0]));
			System.out.println("odczyt");
			this.first = cal;
			System.out.println("przypisanie");
			cal.setTime(sdf.parse(strArr[1]));
			this.second = cal;
			System.out.println("wczytano daty");
		} catch (ParseException e) {
			System.out.println("Problem podczas odczytu czasu");
		}
	}
}
